{
    "presets": ["module:metro-react-native-babel-preset"],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./src"],
                "extensions": [".ts", ".tsx", ".js", ".json"],
                "alias": {
                    "@components": "./src/components",
                    "@screens": "./src/screens",
                    "@navigation": "./src/navigation",
                    "@context": "./src/context",
                    "@variables": "./src/share/variables",
                    "@share": "./src/share/components"
                }
            }
        ]
    ]
}
